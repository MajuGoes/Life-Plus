<div class="container">
  <div class="logo">
    <img class="imgg" src="/img/logosemfundo.png">
  </div>
  <div class="card">
    <h1>Cadastrar</h1>
    <form action="" method="post">
      <div class="label-float">
        <input type="text" name="nome" id="nome" placeholder=" " required />
        <label id="labelNome" for="nome">Nome</label>
      </div>

      <div class="label-float">
        <input type="text" name="email" id="email" placeholder=" " required />
        <label id="labelemail" for="email">Email</label>
      </div>

      <div class="label-float">
        <input type="password" name="senha" id="senha" placeholder=" " required />
        <label id="labelSenha" for="senha">Senha</label>
        <i class="bi bi-eye-fill" id="olho" onclick="senhaaberta()"></i>
      </div>

      <div class="label-float">
        <input type="password" name="confirmSenha" id="confirmSenha" placeholder=" " required />
        <label id="labelConfirmSenha" for="confirmSenha">Confirmar Senha</label>
        <i class="bi bi-eye-fill" id="eyes" onclick="confirmaraberto()"></i>
      </div>

      <div class="justify-center">


        <a href="cricaoperfil.html"><button type="submit" onclick="cadastrar()">Cadastrar</button></a>

      </div>
    </form>
    <div class="formas">
      <p>
        Já tem uma conta?
        <a href="/login">
          Faça Login
        </a>
    </div>
  </div>
</div>

<script src="/js/cadastro.js"></script>